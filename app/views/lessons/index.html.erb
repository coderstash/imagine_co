<h1>Listing lessons</h1>

<table>
  <tr>
    <th>Lesson template</th>
    <th>User</th>
    <th>Video watched</th>
    <th>Complete</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson.lesson_template_id %></td>
    <td><%= lesson.user_id %></td>
    <td><%= lesson.video_watched %></td>
    <td><%= lesson.complete %></td>
    <td><%= lesson.score %></td>
    <td><%= link_to 'Show', lesson %></td>
    <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
    <td><%= link_to 'Destroy', lesson, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Lesson', new_lesson_path %>
