<% content_for :page_actions do %>
  <div id="launch_button">
    <%= link_to 'Assign A Lesson', new_lesson_path(:student_id => @student.id), :id => "assign_lesson", :class => "button green_button add add_form" if current_teacher %>
  </div>
<% end %>

<div class="content_segment top_hr">
  <h2 class="user_name"><%= (@student.full_name).titleize %> - <%= link_to(@classroom.name, @classroom) if @classroom %></h2>
  <div class="clear"></div>

  <h3>Assigned Lessons</h3>
  <div id="student_lessons" class="round">
    <% if current_student %>
      <%= render :partial => "students/listed_lessons", :locals => {:lessons => @student.lessons} %>
    <% else %>
      <%= render :partial => "students/listed_lessons_for_teacher", :locals => {:lessons => @lessons} %>
    <% end %>
  </div>
</div>

<% content_for :overlays do %>

<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" charset="utf-8">
    jQuery(document).ready(function() {
      triggers.viewResults();
    });
  </script>
<% end %>