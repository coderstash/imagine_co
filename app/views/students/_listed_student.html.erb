<li class="listed_student round">
  <div class="student_info student_panel">
    <div class="students_name">
      <%= link_to student.full_name, student_path(student), :class => "view_student" %> 
    </div>
    <ul class="student_creds">
      <li>Login: <%= student.email %></li>
      <li>Student Key: <%= student.student_key %></li>
    </ul>
  </div>
  <div class="student_actions">
    <%= link_to "View Lessons", lessons_path(:student_id => student.id, :classroom_id => classroom_id) unless student.lessons.empty? %>
    <%#= link_to "Assign Lessons", new_lesson_path(:student_id => student.id) %>
    <% if classroom_id %>
    <%= button_to "Remove Student", course_path(:student_id => student.id, :classroom_id => classroom_id), :method => 'delete', :confirm => 'Are you sure you want to remove this student?', :title => "Remove Student", :class => "link_button delete_link red" if current_teacher.admin %>
    <% end %>
  </div>
  <div class="clear"></div>
</li>
 