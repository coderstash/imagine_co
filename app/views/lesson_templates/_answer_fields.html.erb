<div class="field">
  <%= f.hidden_field :_destroy %>
  <%= f.label :answer %><%#= f.link_to_remove "Remove Answer" %>
  <%= f.text_field :answer, :class => "tooltip", :tooltip => "Enter your answer to the question here", :placeholder => "Enter your answer here" %>
</div>
<div class="field checkbox">
  <%= f.check_box :correct %>
  <%= f.label :correct, "Correct Answer", :class => "correct_answer tooltip", :tooltip => "Show a brief example with your question" %>
</div>