<%= nested_form_for(@lesson_template, :html => {:multipart => true}) do |f| %>
  <%= render :partial => 'layouts/error_block', :locals => {:obj => @lesson_template} %>
  <div class="lesson_section section">
    <div class="field">
      <%= f.label :name, "Lesson Name" %><br />
      <%= f.text_field :name, :class => "tooltip", :tooltip => "Give your lesson a name", :placeholder => "Give your lesson a name" %>
    </div>
    <div class="field">
      <%= f.label :subject, "Lesson Subject" %><br />
      <%= f.text_field :subject, :class => "tooltip", :tooltip => "Associate a subject", :placeholder => "Associate a subject"  %>
    </div>
    <div class="field checkbox location">
      <%= radio_button_tag :access_type, "public" %><%= f.label :access_type, "Public", :class => "location tooltip", :tooltip => "Make your lesson publicly available" %>
    </div>
    <div class="field checkbox location">
      <%= radio_button_tag :access_type, "private" %><%= f.label :access_type, "Private", :class => "location tooltip", :tooltip => "Make your lesson private" %>
    </div>
    <%#= f.fields_for :videos do |v| %>
      <%#= render :partial => 'video_fields', :locals => {:f => v} %>
  	<%# end %>
  </div>
  <div class="question_section section top_hr bottom_hr">
    <%= f.fields_for :questions do |q| %>
      <%= render :partial => 'lesson_templates/question_fields', :locals => {:f => q} %>
    <% end %>
    <%= f.link_to_add "Add Question", :questions, :class => "question_link" %>
  </div>
  <div class="lesson_submit field">
    <%= f.submit button_text, :class => 'button blue_button' %>
  </div>
<% end %>
