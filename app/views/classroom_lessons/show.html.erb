<% content_for :page_actions do %>
   <div id="launch_button">

   </div>
<% end %>

<div class="content_segment top_hr">
  <h2 class="user_name"><%= @classroom.name %> - Test Scores</h2>
  <div class="clear"></div>

  <h3>Students</h3>
  <div id="view_controls">
    <%= link_to "Back", :back, :class => "button blue_button" %>
  </div>
  <div id="student_lessons" class="round">
    <%= render :partial => 'classroom_lessons/lesson_header', :locals => {:lessons => @classroom.lessons} %>
    <ul id="student_list">
      <% @classroom.students.each do |student| %>
        <%= render :partial => 'students/listed_student_scores', :locals => {:student => student, :classroom_id => @classroom.id} %>
      <% end %>
    </ul>
  </div>

</div>

<% content_for :overlays do %>

<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" charset="utf-8">
    jQuery(document).ready(function() {
      triggers.loadLessonPanel();
      form.deleteConfirm();
    });
  </script>
<% end %>