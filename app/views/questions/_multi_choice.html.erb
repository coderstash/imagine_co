<div id="#panel<%= i + 1 %>" class="question multiple_choice round panel" panel_number="<%= i + 1 %>">
  <div class="column">
    <h3><%= i + 1 %>. <%= q.question %></h3>
    <% q.answers.each do |a| %>
      <div class="answer">
        <%= radio_button_tag "#{q.id}", "#{a.id}", false, :class => "validate[required]" %> 
        <%= label_tag "#{a.answer}" %>
      </div>
    <% end %>
  </div>
  <div class="column">
    <%= image_tag(q.pictures.last.pic.url(:medium), :height => "125") unless q.pictures.empty? %>
  </div>
</div>