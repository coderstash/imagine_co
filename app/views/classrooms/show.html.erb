<% content_for :page_actions do %>
   <div id="launch_button">
     <%= link_to 'Add Student', new_student_path(:classroom_id => @classroom.id), :id => "add_student", :class => "button green_button add add_form" %>
     <%= link_to 'Assign Lesson', new_lesson_path(:classroom_id => @classroom.id), :id => "add_classroom", :class => "button green_button add add_form" %>
   </div>
<% end %>

<div class="content_segment top_hr">
  <h2 class="user_name"><%= (current_teacher.full_name).titleize %> - <%= @classroom.name %></h2>
  <div class="clear"></div>

  <h3>Students</h3>
  <div id="view_controls">
    <%= link_to 'Classroom Scores', classroom_lesson_path(@classroom.id), :id => "add_classroom", :class => "button blue_button add add_form" %>
    <%= link_to "Back", :back, :class => "button blue_button" %>
  </div>
  <div id="student_lessons" class="round">
    <ul id="student_list">
      <% @classroom.students.each do |student| %>
        <%= render :partial => 'students/listed_student', :locals => {:student => student, :classroom_id => @classroom.id} %>
      <% end %>
    </ul>
  </div>

</div>

<% content_for :overlays do %>

<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" charset="utf-8">
    jQuery(document).ready(function() {
      form.deleteConfirm();
    });
  </script>
<% end %>